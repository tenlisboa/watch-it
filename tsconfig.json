    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true, 
    "allowJs": true,
    "declaration": true,
    "outDir": "./dist",
    "skipLibCheck": true
